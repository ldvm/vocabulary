@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix void:  <http://rdfs.org/ns/void#> .
@prefix sd:    <http://www.w3.org/ns/sparql-service-description#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

@prefix ldvm:       <http://linked.opendata.cz/ontology/ldvm/> .
@prefix v-treemap:    <http://linked.opendata.cz/ontology/ldvm/visualizer/treemap/> .
@prefix v-treemap-r:  <http://linked.opendata.cz/resource/ldvm/visualizer/treemap/> .

v-treemap-r:TreemapVisualizerTemplate a ldvm:VisualizerTemplate ;
	rdfs:label "Treemap Visualizer"@en;
	rdfs:comment "Displays hierarchies"@en;
	ldvm:componentConfigurationTemplate v-treemap-r:Configuration ;
	ldvm:inputTemplate v-treemap-r:Input ;
	ldvm:feature v-treemap-r:HierarchyFeature ;
	.

v-treemap:TreemapVisualizerConfiguration a rdfs:Class ;
	rdfs:label "Google Maps Visualizer Configuration"@en;
	rdfs:subClassOf ldvm:ComponentConfiguration ;
	.

### define properties etc. ###
	
v-treemap-r:Configuration a v-treemap:TreemapVisualizerConfiguration ;
	dcterms:title "Default Configuration" ;
	.

v-treemap-r:Input a ldvm:InputDataPortTemplate ;
	dcterms:title "Hierarchy data" ;
	.
	
v-treemap-r:HierarchyFeature a ldvm:MandatoryFeature ;
	dcterms:title "Display hierarchies" ;
	ldvm:descriptor v-treemap-r:HierarchyDescriptor ;
	.
	
v-treemap-r:HierarchyDescriptor a ldvm:Descriptor ;
	dcterms:title "Hierarchy data presence check" ;
	ldvm:query """
		PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
		
		ASK {{
		   ?ca a skos:Concept;
                      skos:inScheme [
                      	a skos:ConceptScheme
                      ];
		      skos:prefLabel ?name;
		      skos:broaderTransitive ?broader.
		} UNION {
		   ?ca a skos:Concept;
                      skos:inScheme [
                      	a skos:ConceptScheme
                      ];
		      skos:prefLabel ?name;
		      skos:broader ?broader.
		}}
		
	""" ;
	ldvm:appliesTo v-treemap-r:Input ;
	.
